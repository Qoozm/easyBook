<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.xupt.dao.IAttentionUserDao">

    <insert id="saveAttentionUser">
        insert into ${attentionTableName} values(#{attention.from_user_id}, #{attention.to_user_id})
    </insert>

    <delete id="deleteAttentionById">
        delete from ${attentionTableName} where to_user_id = #{toUserId} AND from_user_id = #{fromUserId}
    </delete>

</mapper>