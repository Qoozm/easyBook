<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.xupt.dao.ICategoryDao">

    <insert id="save" parameterType="com.xupt.bean.Category">
        insert into ebuser VALUES (NULL,#{category_type})
    </insert>

    <resultMap id="categoryResultMap" type="com.xupt.bean.Category">
        <result column="category_id" property="category_id"/>
        <result column="category_type" property="category_type"/>
    </resultMap>

    <select id="findAll" resultMap="categoryResultMap">
            select * from ebcategory
    </select>

    <select id="findOneById" resultMap="categoryResultMap" parameterType="java.lang.Integer">
        select * from ebcategory where category_id = #{category_id}
    </select>

    <delete id="deleteById" parameterType="java.lang.Integer">
        delete * from ebcategory where category_id = #{category_id}
    </delete>

    <update id="update" parameterType="com.xupt.bean.Category">
        update ebmessage SET category_type = #{category_type},
    </update>

</mapper>